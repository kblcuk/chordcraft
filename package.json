{
  "name": "chordcraft-workspace",
  "private": true,
  "workspaces": [
    "web",
    "crates/wasm/pkg"
  ],
  "scripts": {
    "dev": "bun run --cwd web dev",
    "build": "bun run --cwd web build",
    "preview": "bun run --cwd web preview",
    "test": "bun run --cwd web test"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-toml"
    ],
    "tabWidth": 2,
    "useTabs": true
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-toml": "^2.0.6"
  }
}
